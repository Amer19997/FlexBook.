@page
@using System.Globalization;
@model WebUI.Pages.Bank.IndexModel
@{
}
@if (Model.Banks.Items.Any())
{
    <div class="app-heading d-flex justify-content-between">
        <div class="app-title">
            <h3 class="m-0">إدارة البنوك</h3>
        </div>
        <div class="app-heading-end d-flex w-50">
            @if (User.IsInRole(SystemRoles.SuperAdmin))
            {
                <a class="btn btn-tertiary line-befor me-5" href="/Bank/Add">
                    إضافة بنك
                </a>
            }
            
        </div>
    </div>

    <div id="search-result">
        <partial name="_BankList.cshtml" model="@Model.Banks" />
    </div>

    <!--start delete modal-->
    <div class="modal fade body-modal" id="deleteModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-md modal-dialog-centered">
            <div class="modal-content text-center">
                <form method="post"
                  data-ajax="true"
                  data-ajax-url="?handler=Delete"
                  data-ajax-method="post"
                  data-ajax-success="deleteBankSuccess"
                  data-ajax-failure="deleteBankFailed"
                  id="deleteBankform">
                <div class="modal-body">
                    <span class="ps-1"><img src="~/cms_lib/img/icons/deletePopup.svg" alt="details-icon" class="icons" /></span>

                    <h3> هل تريد حذف هذه البنك</h3>
                    <p>
                        في حالة الموافقة ، فلن تستطيع <br />استعادة البيانات مره اخرى
                    </p>
                </div>
                    <input type="hidden" id="bankId" name="bankId" />
                <div class="modal-button">
                    <button type="submit" id="YesValue" class="btn btn-primary" data-bs-dismiss="modal">نعم</button>
                    <button  type="button"class=" btn btn-light-primary" data-bs-dismiss="modal">لا</button>
                </div>
                </form>
            </div>
        </div>
    </div>


    <div class="modal fade body-modal" id="activateOrDeactivateModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-md modal-dialog-centered">
            <div class="modal-content text-center">
                <form method="post"
                  data-ajax="true"
                  data-ajax-url="?handler=ActivateOrDeactivate"
                  data-ajax-method="post"
                  data-ajax-success="activateOrDeactivateBankSuccess"
                  data-ajax-failure="activateOrDeactivateBankFailed"
                  id="activateOrDeactivateBankform">
                    <div class="modal-body">
                        <span class="ps-1"><img src="~/cms_lib/img/icons/deletePopup.svg" alt="details-icon" class="icons" /></span>

                        <h3> هل تريد<span id="activateOrDeactivateText"></span> هذا البنك</h3>

                    </div>
                    <input type="hidden" id="bank_Id" name="bank_Id" />
                    <div class="modal-button">
                        <button type="submit" id="YesValue" class="btn btn-primary" data-bs-dismiss="modal">نعم</button>
                        <button type="button" class=" btn btn-light-primary" data-bs-dismiss="modal">لا</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
else
{
     <div class="parent w-100 h-100">
            <div class="child">
                <div>
                    <img src="~/Cms_Lib/img/icons/no-users-icon.svg" alt="search-icon" />

                </div>

                <div>
                <h2>لا يوجد وحدات</h2>

                </div>
            @if (User.IsInRole(SystemRoles.SuperAdmin))
            {
                <a asp-page="/Bank/Add" class="btn btn-tertiary">
                    <img src="~/Cms_Lib/img/icons/add-user.svg" alt="search-icon" />
                إضافة بنك
                </a>
            }
            
            </div>

        </div>
}



@section scripts {
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/lookups/bankscript.js?version=@(DateTime.Now.Ticks)"></script>
}
