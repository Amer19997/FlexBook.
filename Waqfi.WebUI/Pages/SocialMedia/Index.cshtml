@page
@model WebUI.Pages.SocialMedia.IndexModel
@{
}
<form method="post"
      data-ajax="true"
      data-ajax-url="?handler=AddItem"
      data-ajax-method="post"
      data-ajax-success="AddItemSuccess"
      data-ajax-failure="AddItemFailed"
      id="approve-request-form"
      enctype="multipart/form-data">
    <div class="row">
        <div class="col-12">
            <!-- heading  -->
            <div class="app-heading">
                <div class="app-title">
                    <a href="/ListLookup/Index" class="ps-1">
                        <img class="rotated"
                             src="~/Cms_Lib/img/icons/Arrow-Right Square.svg"
                             alt="details-icon"
                             class="icons" />
                    </a>
                    <h3 class="m-0">تعديل بيانات حسابات التواصل  </h3>
                </div>
                <div class="form-buttons">
                    <button type="submit" class="btn btn-tertiary submitbutton" href="./product-list.html">حفظ التعديلات</button>
                    <a class="btn btn-light-primary" data-bs-toggle="modal" data-bs-target="#ChancelEditAboutUS">الغاء</a>
                </div>
            </div>


            <div class="app-form">
                <!-- form content -->

                <div class="form-wrapper">
                    <div class="form-content">
                        <div class="form-header">
                            <div class="d-flex align-items-center">
                                <div class="point"></div>
                                <h3>البيانات الأساسية</h3>
                            </div>
                        </div>
                        <div class="card">
                            <div class="col-12">
                                <div class="row">
                                    <div class="row">
                                        <div class=" col-12 col-md-6 mb-3">
                                            <label for="important">رابط الفيسبوك </label><span class="text-danger"></span>
                                            <input asp-for="@Model.SocialMedia.FaceBook" class="form-control" id="important" placeholder="رابط الفيسبوك "
                                                       rows="4"></input>

                                                <span class="text-danger" asp-validation-for="@Model.SocialMedia.FaceBook" class="text-error">
                                                </span>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class=" col-12 col-md-6 mb-3">
                                            <label for="important">رابط الانستجرام </label><span class="text-danger"></span>
                                            <input asp-for="@Model.SocialMedia.Instragram"  class="form-control" id="important" placeholder="رابط الانستجرام "
                                                       rows="4"></input>

                                                <span class="text-danger" asp-validation-for="@Model.SocialMedia.Instragram" class="text-error">
                                                </span>

                                        </div>
                                    </div>

                                    <div class="row">
                                    <div class="col-md-6 col-12 mb-3">
                                        <label for="important">رابط تويتر</label><span class="text-danger">
                                            <span>
                                                <input asp-for="@Model.SocialMedia.Twitter"  class="form-control" id="important" placeholder="رابط تويتر "
                                                       rows="4"></input>

                                                <span class="text-danger" asp-validation-for="@Model.SocialMedia.Twitter" class="text-error">
                                                </span>
                                    </div>
                                    </div>

                                     <div class="col-md-6 col-12 mb-3">
                                        <label for="important">رابط سناب شات</label><span class="text-danger">
                                            <span>
                                                <input asp-for="@Model.SocialMedia.SnapChat" class="form-control" id="important" placeholder="رابط سناب شات "
                                                       rows="4"></input>

                                                <span class="text-danger" asp-validation-for="@Model.SocialMedia.SnapChat" class="text-error">
                                                </span>
                                    </div>
                         
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>


</form>

<div class="modal fade body-modal" id="ChancelEditAboutUS" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content text-center">
            <div class="modal-body">
                <span class="ps-1"><img src="~/cms_lib/img/icons/deletePopup.svg" alt="details-icon" class="icons" /></span>

                <h3>هل تريد إلغاء التعديلات؟  </h3>
                <p>
                    في حالة الموافقة على الإلغاء لن تستطيع استعادة هذه البيانات مرة أخرى
                </p>
            </div>
            <div class="modal-button">
                <button id="BackList" class=" btn btn-tertiary">نعم</button>
                <button class=" btn btn-light-primary" data-bs-dismiss="modal">لا</button>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/SocialMedia.js"></script>
    <script src="~/js/UserMangment/GeneralCheck.js"></script>



    <script>
        $(document).on("click", "#BackList", function () {

            window.location.replace("/ListLookup/Index");
        });

    </script>


}