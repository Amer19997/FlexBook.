@model GetContactUsListCmsQueryResultPaginatedList
@{
    var i = (Model.PageNumber * Model.PageSize) - Model.PageSize + 1;
}
<div class="col-12">
    <!--strat table -->
    <div class="app-table table-responsive">
        <table id="Questiontable" class="table fagtable table-bordered">
            <thead>
                <tr class="table-header">
                    <th scope="col">م</th>
                    <th scope="col">رقم الطلب</th>
                    <th scope="col">اسم مقدم الطلب</th>
                    <th scope="col">البريد الالكتروني</th>
                    <th scope="col">رقم الجوال</th>
                    <th scope="col">عنوان الرسالة</th>
                    <th scope="col">نوع مرسل الطلب</th>
                    <th scope="col">تاريخ انشاء الطلب</th>
                    <th scope="col"> تاريخ آخر تحديث</th>

                    <th scope="col">حالة الطلب </th>
                    <th scope="col"> </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items.Any())
                {
                    foreach (var item in Model.Items)
                    {
                                <tr>
                                    <td>@(i++)</td>
                                    <td>@item.RequestNumber</td>
                                    <td>
                                        @item.PersonName
                                        <br>
                                        @(string.IsNullOrEmpty(item.ProviderName)?"":$"({item.ProviderName})")
                                    </td>
                                    <td>@item.PersonEmail</td>
                                    <td>@item.MobilNumber</td>
                                    <td>@item.Title</td>
                                    <td>@item.ContactUsTypeName</td>
                                    <td>@item.Created</td>
                                    <td>@(item.LastModified ?? "-")</td>

                                    <td>
                                <span class="@(item.ContactUsStatusId==(int)WebUI.Enums.ContactUsStatues.Close? "badge closed" :item.ContactUsStatusId==(int)WebUI.Enums.ContactUsStatues.Open? "badge open" : item.ContactUsStatusId == (int)WebUI.Enums.ContactUsStatues.Waitingcustomer ? "badge waiting" : "badge hold")">
                                    @(item.ContactUsStatusName)</span>
                                    </td>
                                    <td>
                                        <div class="controls">

                                            <ul>
                                                <li>

                                                    <a href="/ContactUsRequest/ContactUsDetalies?RequestId=@item.Id"><img src="~/cms_lib/img/icons/document.svg" /></a>

                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                    }
                }
                else
                {
                        <tr>
                            <td colspan="10" class="no-items-cont">
                                <span>لا يوجد نتائج للبحث</span>
                            </td>
                        </tr>
                }



            </tbody>
        </table>

    </div>

</div>

<div class="app-pagination">
    <vc:pager total-items-count="@Model.TotalCount" current-page="@Model.PageNumber">

    </vc:pager>

</div>
