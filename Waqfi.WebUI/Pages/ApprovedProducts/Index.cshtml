@page
<style>
    .filter-form .myform input, .filter-form .myform select {
        max-width: 95px;
        margin: 0 0 0 5px !important;


    }
  
</style>
@using WebUI.IntegrationServices;
@model WebUI.Pages.ApprovedProducts.IndexModel
@inject IResourceService ResourceService

@{

}
@Html.AntiForgeryToken()
@if (!string.IsNullOrEmpty(Model.Error))
{
    <span style="color:red"> . @Model.Error</span>

    <br />
}

@if (Model.ProductsRequest.ProductsRequest.Any())
{
    <div class="app-heading flex-wrap d-flex justify-content-between">

        <div class="app-title mb-3">

            <h3 class="m-0">المنتجات الوقفية</h3>
        </div>

        <div class="app-heading-end d-flex w-100">

            <div class="app-filter">

                <div class="filter-form">

                    <form method="post"
                      data-ajax="true"
                      data-ajax-url="?handler=Search"
                      data-ajax-method="post"
                      id="search-Product-form"
                      data-ajax-mode="replace"
                      data-ajax-update="#search-result">

                        <div class="myform top-form mb-2  flex-nowrap">
                            <div class="d-flex align-items-center justify-content-start flex-wrap w-100 gap-2">

                                <label for="" class="form-label mb-0">التصفية بواسطة :</label>

                                <input type="text" id="socName" asp-for="@Model.Filters.ProductName" class="form-control  filteration" placeholder=" اسم/رقم المنتج" />

                                <input type="text" id="RegistNumber" asp-for="@Model.Filters.EntityName" class="form-control  filteration" placeholder="الجهه" />

                                <select asp-for="@Model.Filters.ProductType" class="form-select filteration" asp-items="@(new SelectList(Model.lookUps.ProductType,"Id","Name"))">
                                    <option value="" selected>نوع المنتج</option>
                                </select>

                                <select asp-for="@Model.Filters.Massar" class="form-select filteration" asp-items="@(new SelectList(Model.lookUps.Masarat,"Id","NameAr"))">
                                    <option value="" selected>المسار</option>
                                </select>

                                <select asp-for="@Model.Filters.Gender" class="form-select filteration" asp-items="@(new SelectList(Model.lookUps.Gender,"Id","Name"))">
                                    <option value="" selected>الفئة المستهدفة</option>
                                </select>

                                <select asp-for="@Model.Filters.City" class="form-select filteration" asp-items="@(new SelectList(Model.lookUps.City,"Id","NameAr"))">
                                    <option value="" selected>المدينة</option>
                                </select>

                                <select asp-for="@Model.Filters.sesson" class="form-select filteration" asp-items="@(new SelectList(Model.lookUps.Sessoins,"Id","NameAr"))">
                                    <option value="" selected>المواسم</option>
                                </select>

                                <select asp-for="@Model.Filters.ProductPaymentStatus" class="form-select filteration" asp-items="@(new SelectList(Model.ProductTypeResult,"Id","Name"))">
                                    <option value="" selected>الحالة</option>
                                </select>
                                <select asp-for="@Model.Filters.IsBarallelProduct" class="form-select filteration">
                                    <option value="-1" selected>المنتج  الموازى</option>
                                    <option value="1" >نعم</option>
                                    <option value="0">لا</option>
                                </select>

                                <select asp-for="@Model.Filters.Apperonhomepage" class="form-select filteration">
                                    <option value="" selected>عرض في الرئيسية</option>
                                    <option value="1">نعم</option>
                                    <option value="0">لا</option>
                                </select>

                                <select asp-for="@Model.Filters.BidPercentage" class="form-select filteration">
                                    <option value="" selected>مقابلة العطاء</option>
                                    <option value="1">نعم</option>
                                    <option value="0">لا</option>
                                </select>

                              
                            </div>
                            <a class="close-filter btnclose d-none" asp-page="/ApprovedProducts/Index" asp-page-handler="GetAjax" type="reset">
                                <img src="~/cms_lib/img/icons/close-filter.svg" />
                            </a>
                            <button type="submit" class="btn btn-secondary">
                                تصفية
                            </button>
                        </div>

                    </form>

                </div>

            </div>



        </div>

    </div>
    <div class="modal fade body-modal" id="ApperonHomePage" data-bs-backdrop="static" data-bs-keyboard="false"
     tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-md modal-dialog-centered">
            <div class="modal-content text-center">
                <div class="modal-body">
                    <span class="ps-1"><img src="/cms_lib/img/icons/active.svg" alt="details-icon" class="icons" /></span>
                    <h3 id="HeaderModal">هل تريد عرض المننتج على الصفحة الرئيسية؟ </h3>
                    <p id="BodModal">في  حالة الموافقة على العرض سيتم عرض المنتج على </p>
                    <p>الصفحة الرئيسية /قسم آخر المشاريع الوقفية</p>

                </div>
                <div class="modal-button">
                    <button id="ActiveModal" data-id="" data-isActive="" class=" btn btn-tertiary">نعم</button>
                    <button id="ActiveNo" class=" btn btn-light-primary" data-bs-dismiss="modal">لا</button>
                </div>


            </div>
        </div>
    </div>

    <div class="modal fade body-modal" id="IsBarallelProduct" data-bs-backdrop="static" data-bs-keyboard="false"
     tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-md modal-dialog-centered">
            <div class="modal-content text-center">
                <div class="modal-body">
                    <span class="ps-1"><img src="/cms_lib/img/icons/active.svg" alt="details-icon" class="icons" /></span>
                    <h3 id="HeaderproductModal"> </h3>
                    <p id="BodproductModal"> </p>

                </div>
                <div class="modal-button">
                    <button id="ChangeProdctModal" data-id="" data-isActive="" class=" btn btn-tertiary"> @ResourceService.GetMessage("yes", "ar-SA")</button>
                    <button id="ActiveProdctNo" class=" btn btn-light-primary" data-bs-dismiss="modal"> @ResourceService.GetMessage("No", "ar-SA")</button>
                </div>


            </div>
        </div>
    </div>
    <div id="search-result">
        <partial name="_ApprovedProduct.cshtml" model="@Model.ProductsRequest" />
    </div>

}
else
{

    <div class="parent w-100 h-100">
        <div class="child">
            <div>
                <img src="~/Cms_Lib/img/icons/no-users-icon.svg" alt="search-icon" />

            </div>

            <div>
                <h2>لا يوجد طلبات جديده</h2>

            </div>
        </div>

    </div>
}






@section scripts {
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script>

        $('.filteration').on('change', function (e) {
            var Getval = $(this).val();
            if (Getval != '') {
                $('.btnclose').removeClass('d-none');
                $('.btnclose').addClass('d-block');
            } else {
                return false;
            }
        });

        $(document).on("click", ".input_Switch_De", function () {
            

            var GetProductId = $(this).attr("data-id");
            var IsActiveorNo = $(this).hasClass("active");

            $('#ActiveModal').attr("data-id", GetProductId);
            $('#ActiveModal').attr("data-isActive", IsActiveorNo);
            $('#ActiveNo').attr("data-id", GetProductId);

            if (IsActiveorNo) {

                $('#HeaderModal').text('هل تريد حذف المننتج على الصفحة الرئيسية؟')
                $('#BodModal').text('في  حالة الموافقة على الحذف سيتم حذف المنتج على')
            }else{
                $('#HeaderModal').text('هل تريد عرض المننتج على الصفحة الرئيسية؟')
                $('#BodModal').text('في  حالة الموافقة على العرض سيتم عرض المنتج على')
            }

        });


        $(document).on("click", ".input_Switch_productStatues", function () {
            
            
            var GetProductId = $(this).attr("data-id");
            var IsActiveorNo = $(this).hasClass("active");

            $('#ChangeProdctModal').attr("data-id", GetProductId);
            $('#ChangeProdctModal').attr("data-isActive", IsActiveorNo);
            $('#ActiveProdctNo').attr("data-id", GetProductId);

            if (IsActiveorNo) {

                $('#HeaderproductModal').text('هل تريد تعديل حالة المنتج الى منتج عادى؟')
                $('#BodproductModal').text('')
            }else{
                $('#HeaderproductModal').text('هل تريد تعديل حالة المنتج الى منتج موازى؟')
                $('#BodproductModal').text('')
            }

        });

        
        $(document).on("click", "#ChangeProdctModal", function () {
            

            var GetProductId = $(this).attr("data-id");
            var GetActiveDeactive = $(this).attr("data-isActive");
            
            ReloadChangeStatues(GetProductId, GetActiveDeactive);


        });

        $(document).on("click", "#ActiveModal", function () {
            

            var GetProductId = $(this).attr("data-id");
            var GetActiveDeactive = $(this).attr("data-isActive");

            ReloadDeactive(GetProductId, GetActiveDeactive);


        });

        function ReloadDeactive(GetVal, GetActiveDeactive) {
            
            $.ajax({
                url: "?handler=Acvtive",
                type: "Post",
                contentType: 'application/x-www-form-urlencoded',
                dataType: "json",
                data: { "UserId": GetVal, "ActiveOrDeactive": GetActiveDeactive },
                headers:
                {
                    "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                },
                success: function (result) {

                    var IfSucces = result.success;
                    if (IfSucces) {
                        location.reload(true)

                    } else {
                        debugger;
                        $('#ApperonHomePage').modal('hide');
                        $("#ActiveDeactiveBlockMessage").html(result.errors[0])

                        $('#Active-Warning-Modal').modal('show');
                    }
                }
            });
        }


         function ReloadChangeStatues(GetVal, GetActiveDeactive) {
            
            $.ajax({
                url: "?handler=ChangeStues",
                type: "Post",
                contentType: 'application/x-www-form-urlencoded',
                dataType: "json",
                data: { "UserId": GetVal, "ActiveOrDeactive": GetActiveDeactive },
                headers:
                {
                    "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                },
                success: function (result) {

                    var IfSucces = result.success;
                    if (IfSucces) {
                        location.reload(true)

                    } else {
                        debugger;
                        $('#ApperonHomePage').modal('hide');
                        $("#ActiveDeactiveBlockMessage").html(result.errors[0])

                        $('#Active-Warning-Modal').modal('show');
                    }
                }
            });
        }
    </script>
  
}