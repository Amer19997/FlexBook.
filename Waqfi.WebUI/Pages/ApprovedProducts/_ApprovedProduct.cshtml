@using WebUI.IntegrationServices;
@using WebUI.Models.ApprovedProduct;
@model ApprovedProductDTO
@{

    var i = ((Model.PageNumber == 0 ? 1 : Model.PageNumber) * Model.PageSize) - Model.PageSize + 1;
}

<div class="col-12">
    <!--strat table -->
    <div class="col-12">
        <!--strat table -->
        <div class="app-table table-responsive">

            <table id="Questiontable" class="table fagtable table-bordered">
                <thead>
                    <tr class="table-header">
                        <th scope="col">م</th>
                        <th scope="col">رقم المنتج</th>
                        <th scope="col">اسم المنتج</th>
                        <th scope="col">نوع المنتج</th>
                        <th scope="col"> المسار</th>
                        <th scope="col">اسم الجهة </th>
                        <th scope="col"> المبلغ الإجمالي </th>
                        <th scope="col"> المبلغ المجمع</th>
                        <th scope="col"> المبلغ المستهدف</th>
                        <th scope="col"> عدد المستفيدين</th>
                        <th scope="col"> الفئة المستهدفة </th>
                        <th scope="col"> المدينة</th>
                        <th scope="col"> عرض فى الرئيسية</th>
                        <th scope="col">منتج موازى</th>
                        <th scope="col"> </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ProductsRequest.Any())
                    {
                        @foreach (var item in Model.ProductsRequest)
                        {
                            <tr style="@(item.IsActive==false ? "background-color: #e5b1b6;":"")">
                                <td>@(i++)</td>
                                <td>@(item.ProductNumber == 0 ? "-" : item.ProductNumber)</td>
                                <td>@item.ProductName</td>
                                <td>@item.ProductsType</td>
                                <td>@item.Massar</td>
                                <td>@item.EntityName</td>
                                <td>@item.TotalAmount</td>
                                <td>@item.GatheredAmount</td>
                                <td>@item.TargetAmount</td>
                                <td>@item.NumberOfBinf</td>
                                <td>@item.TargetGender</td>
                                <td>@item.City</td>
                                <td>
                                    <div class="toggle-Section">
                                        <label class="switch input_Switch_De @(item.AppearOnHomePage==true ? "active":"")" data-id="@item.Id">
                                            <input type="checkbox input_Switch_De" data-bs-toggle="modal" data-bs-target="#ApperonHomePage" />
                                            <span class="slider round "></span>
                                        </label>
                                    </div>
                                </td>
                                <td>
                                     <div class="toggle-Section">
                                        <label class="switch input_Switch_productStatues @(item.IsParallelProduct==true ? "active":"")" data-id="@item.Id">
                                            <input type="checkbox input_Switch_productStatues" data-bs-toggle="modal" data-bs-target="#IsBarallelProduct" />
                                            <span class="slider round "></span>
                                        </label>
                                    </div>
                                    
                                </td>
                                <td>
                                    <div class="controls">
                                        <ul>
                                             <li>
                                                <a href="/ApprovedProducts/Edit?id=@item.Id"><img src="/cms_lib/img/icons/Edit.svg" alt="Edit-icon" /></a>
                                            </li>
                                            <li>
                                                <a href="/Product/ApprovedProductDetails?productId=@item.Id"><img src="~/cms_lib/img/icons/document.svg" /></a>
                                            </li>
                                           
                                        </ul>
                                    </div>
                                </td>
                            </tr>

                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="no-items-cont">
                                <span>لا يوجد نتائج للبحث</span>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>


        </div>
    </div>
</div>


<div class="app-pagination">
    <vc:pager total-items-count="@Model.TotalCount" current-page="@Model.PageNumber ?? 1">

    </vc:pager>

</div>
